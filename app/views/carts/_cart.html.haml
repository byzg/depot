.cart_title Your Cart
%table
  = render partial: 'carts/line_item', collection: cart.line_items
  %tr.total_line
    %td{colspan: "2"} Total
    %td.total_cell= number_to_currency(cart.total_price)
-unless current_page?(new_order_path)
  = button_to "Checkout", new_order_path, method: :get
  = button_to 'Empty cart', cart_path(cart), method: :delete, confirm: 'Are you sure?', remote: true